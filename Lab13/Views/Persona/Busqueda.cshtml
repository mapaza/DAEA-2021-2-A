@model List<Lab13.Models.Persona>
@{
    ViewBag.Title = "Resultados de la Búsqueda";
}
@if (@ViewBag.estado == "encontrado")
{
    <div class="d-flex aligns-items-center justify-content-center">
        <div class="card mb-3 shadow" style="max-width: 100%; border-radius:50px">
            <div class="row g-0">
                <div class="col-md-4 d-flex aligns-items-center justify-content-center">
                    <img src="https://icons.iconarchive.com/icons/paomedia/small-n-flat/256/sign-check-icon.png" 
                         style=" padding:10px; padding-top:30px; max-height:150px; max-width:150px"  class="img-fluid rounded-start">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <div class="card-header"><strong>Persona Encontrada!</strong></div>
                        <p class="card-text"><strong>ID: </strong>@ViewBag.id</p>
                        <p class="card-text"><strong>Nombre: </strong>@ViewBag.nombre</p>
                        <p class="card-text"><strong>Apellido: </strong>@ViewBag.apellido</p>
                        <p class="card-text"><strong>Fecha de Nacimiento: </strong>@ViewBag.fecha_nac</p>
                        <p class="card-text"><strong>Dirección: </strong>@ViewBag.direccion</p>
                        <p class="card-text"><strong>Email: </strong>@ViewBag.email</p>

                    </div>
                </div>
            </div>
        </div>

    </div>
    @Html.ActionLink("Volver a Listado Personas", "Listar", "Persona", new { @class = "btn btn-secondary" })
}
else
{
    <div class="d-flex aligns-items-center justify-content-center">
        <div class="card mb-3 shadow " style="max-width: 60%; border-radius:50px">
            <div class="row g-0">
                <div class="col-md-4 d-flex aligns-items-center justify-content-center">
                    <img src="https://cdn.icon-icons.com/icons2/1380/PNG/512/vcsconflicting_93497.png" style="padding:20px; " width="100%" class="img-fluid rounded-start">
                </div>
                <div class="col-md-8 d-flex aligns-items-center justify-content-center">
                    <div class="card-body">
                        <div class="card-header text-danger"><strong>Usuario No Encontrado!</strong></div>
                        <p class="card-text"><strong>Inténtelo de Nuevo </strong> ingresando un valor válido</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.ActionLink("Volver a Listado Personas", "Listar", "Persona", new { @class = "btn btn-secondary" })

}

