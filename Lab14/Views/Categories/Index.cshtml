@model IEnumerable<Lab14.Categories>
@{
    ViewBag.Title = "Index";
}
<nav style="background-color: #21BF73; border-radius: 20px; margin-bottom:10px;" class="navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand fw-bolder">&nbsp;&nbsp;&nbsp;Index</a>
        <form class="d-flex">
            @Html.ActionLink("Nuevo Prestamo", "Create", null, new { @class = "btn btn-warning" })
        </form>
    </div>
</nav>

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            Accciones
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.CategoryID }, new { @class = "btn btn-primary" }) 
                @Html.ActionLink("Detalles", "Details", new { id = item.CategoryID },  new { @class = "btn btn-secondary" }) 
                @Html.ActionLink("Borrar", "Delete", new { id = item.CategoryID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
