@model Categories
@{
    ViewBag.Title = "Create";
}
<nav style="background-color: #21BF73; border-radius: 20px; margin-bottom:10px;" class="navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand fw-bolder">&nbsp;&nbsp;&nbsp;Create</a>
        <form class="d-flex">
            @Html.ActionLink("Retornar al Index", "Index", null, new { @class = "btn btn-warning col-auto" })
        </form>
    </div>
</nav>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

<div style="padding:20px; width:600px;">

    <div class="input-group mb-3">
        <span class="input-group-text fw-bold" id="basic-addon1">@Html.LabelFor(model => model.CategoryID, new { @class = "form-label" })</span>
        <input type="text" class="form-control" placeholder="El ID se genera automáticamente" disabled />
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text fw-bold" id="basic-addon1">@Html.LabelFor(model => model.CategoryName, new { @class = "form-label" })</span>
        @Html.EditorFor(model => model.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.CategoryName)
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text fw-bold" id="basic-addon1">@Html.LabelFor(model => model.Description, new { @class = "form-label" })</span>
        @Html.EditorFor(model => model.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Description)
    </div>
  
    <div class="">
        <input type="submit" class="btn btn-primary " value="Create" />
    </div>

   </div>

    }
  
